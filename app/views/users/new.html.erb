<h1>新規登録</h1>

<%= form_with model: @user, url: signup_path, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "登録する" %>
  </div>
<% end %>
