<div class="flex justify-center items-center min-h-screen bg-gray-50">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6 text-center">
    <h1 class="text-xl font-bold text-gray-800 mb-6"><%= @item.name %>詳細</h1>

    <div class="flex justify-center mb-4">
    <% if @item.image.attached? %>
      <%= image_tag @item.image, class: "w-48 h-auto rounded-md" %>
    <% else %>
      <p class="text-gray-500">画像なし</p>
    <% end %>
    </div>

    <ul class="space-y-2 text-gray-700 text-sm">
      <li><strong>ブランド：</strong><%= @item.brand.presence || 'なし' %></li>
      <li><strong>カテゴリ：</strong><%= @item.category.presence || 'なし' %></li>
      <li><strong>カラー：</strong><%= @item.color.presence || 'なし' %></li>

      <% keywords = [@item.keyword1, @item.keyword2].map { |k| k.to_s.strip.downcase }.reject(&:blank?).uniq %>
      <% if keywords.any? %>
        <li><strong>キーワード：</strong><%= keywords.join(' / ') %></li>
      <% end %>

      <li><strong>値段：</strong><%= number_to_currency(@item.price, unit: "¥") %></li>
      <li><strong>説明：</strong><%= @item.description.presence || 'なし' %></li>
    </ul>

    <div class="mt-6 flex justify-center gap-4">
      <%= link_to '編集する', edit_item_path(@item), class: 'text-blue-600 text-sm underline' %>
    </div>
  </div>
</div>
