<div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-xl font-bold mb-4 text-center">アイテム登録</h2>

  <%= form_with(model: item, local: true, html: { multipart: true }) do |f| %>
    <% if item.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-700 rounded">
        <h3 class="font-bold mb-2"><%= pluralize(item.errors.count, "件のエラー") %>があります:</h3>
        <ul class="list-disc pl-5">
          <% item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# 画像 %>
    <div class="mb-4">
      <%= f.label :image, '画像（※名前または画像どちらか必須）', class: "block font-medium mb-1" %>
      <%= f.file_field :image, class: "block w-full text-sm" %>
    </div>

    <%# 名前 %>
    <div class="mb-4">
      <%= f.label :name, '名前（※名前または画像どちらか必須）', class: "block font-medium mb-1" %>
      <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# ブランド %>
    <div class="mb-4">
      <%= f.label :brand, 'ブランド', class: "block font-medium mb-1" %>
      <%= f.text_field :brand, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# カテゴリ %>
    <div class="mb-4">
      <%= f.label :category, 'カテゴリ', class: "block font-medium mb-1" %>
      <%= f.select :category, [['-- 選択なし --', '']] + Item::CATEGORIES.map { |c| [c, c] }, { selected: @item.category }, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# 値段 %>
    <div class="mb-4">
      <%= f.label :price, '値段', class: "block font-medium mb-1" %>
      <%= f.text_field :price, placeholder: '例：1500 (半角数字・カンマなし)', class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# カラー %>
    <div class="mb-4">
      <%= f.label :color, 'カラー', class: "block font-medium mb-1" %>
      <%= f.select :color, [['-- 選択なし --', '']] + Item::COLORS.map { |c| [c, c] }, { selected: @item.color }, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# キーワード① %>
    <div class="mb-4">
      <%= f.label :keyword1, 'キーワード①', class: "block font-medium mb-1" %>
      <%= f.text_field :keyword1, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# キーワード② %>
    <div class="mb-4">
      <%= f.label :keyword2, 'キーワード②', class: "block font-medium mb-1" %>
      <%= f.text_field :keyword2, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2" %>
    </div>

    <%# 説明 %>
    <div class="mb-4">
      <%= f.label :description, '説明', class: "block font-medium mb-1" %>
      <%= f.text_area :description, class: "mt-1 block w-full border border-gray-300 rounded bg-white p-2", rows: 3 %>
    </div>

    <%# 送信ボタン %>
    <div class="text-center">
      <%= f.submit "登録する", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition" %>
    </div>
  <% end %>
</div>
