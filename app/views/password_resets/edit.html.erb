<h1>新しいパスワードを設定</h1>

<%= form_with model: @user, url: password_reset_path(token: @token), method: :patch, local: true do |form| %>
  <%= hidden_field_tag 'token', @token %>

  <div>
    <%= form.label :password, '新しいパスワード' %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, '確認用パスワード' %><br>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "パスワードを変更する" %>
  </div>
<% end %>
