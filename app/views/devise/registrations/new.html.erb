<div class="min-h-screen flex items-center justify-center bg-white px-4">
  <div class="bg-white border border-gray-300 rounded px-6 py-8 w-full max-w-xs">
    <h2 class="text-xl font-bold text-center text-black mb-6">アカウント登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-1" %>
        <%= f.email_field :email, class: "w-full border rounded px-3 py-2 text-gray-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-gray-700 text-sm font-bold mb-1" %>
        <%= f.password_field :password, class: "w-full border rounded px-3 py-2 text-gray-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-gray-700 text-sm font-bold mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full border rounded px-3 py-2 text-gray-700" %>
      </div>

      <div class="mb-6">
        <%= f.submit "登録する", class: "w-full bg-blue-500 text-white py-2 rounded mt-4 hover:bg-blue-600" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600 space-y-1">
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-blue-500 hover:underline block" %>
      <%= link_to "パスワードを忘れた方はこちら", "#", class: "text-gray-400 cursor-not-allowed block", disabled: true %>
    </div>
  </div>
</div>
