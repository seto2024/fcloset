<div class="min-h-screen flex items-center justify-center bg-pink-50 px-4">
  <div class="bg-white shadow-md rounded px-6 py-8 w-full max-w-xs">
    <h2 class="text-xl font-bold text-center text-pink-500 mb-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-1" %>
        <%= f.email_field :email, class: "w-full border rounded px-3 py-2 text-gray-700" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-gray-700 text-sm font-bold mb-1" %>
        <%= f.password_field :password, class: "w-full border rounded px-3 py-2 text-gray-700" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "ログイン状態を保持", class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-6">
       <%= f.submit "ログイン", class: "w-full bg-blue-500 text-white py-2 rounded mt-4 hover:bg-blue-600" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600 space-y-1">
      <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "text-pink-500 hover:underline block" %>
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-pink-500 hover:underline block" %>
    </div>
  </div>
</div>
