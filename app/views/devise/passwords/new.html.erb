<div class="min-h-screen flex items-center justify-center bg-white px-4">
  <div class="w-full max-w-md bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-center">パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md" %>
      </div>

      <div class="mt-6">
        <%= f.submit "パスワード再設定メールを送信", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
